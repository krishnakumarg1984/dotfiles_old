# Pulse Audio controls
bindsym Mod1+Up exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym Mod1+Down exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym Mod1+0 exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

