    # status_command i3status #-c ~/.i3/i3status.conf
    # status_command ~/bumblebee-status/bumblebee-status -m disk:root #cpu memory layout pasink datetime -t gruvbox-powerline
    status_command i3blocks
    # status_command python ~/i3pystatus.py
    position top
    workspace_buttons yes
    font pango: sans 12, Icons 16
    colors {
    separator #586e75
    urgent_workspace #77216f #77216f #ffffff
  }
}

